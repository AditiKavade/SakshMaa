<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".admin_page">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"

        android:layout_height="425dp"
        android:background="@drawable/background"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/groupname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/innerbg"
            android:text=" "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/adminname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupname"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="@string/admlogtext1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/viewbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adminname"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/innerbg"
            android:padding="10dp"
            android:text="@string/view"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewbtn"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/innerbg">
            <!--  Total Amount info            -->
            <TextView
                android:id="@+id/totalamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:text="@string/admlogtext3"
                android:textColor="@color/black"
                android:textStyle="normal" />

            <!--  Investment in bachat gat    -->

            <TextView

                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:paddingTop="5dp"
                android:text="₹"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/totalamt"
                tools:layout_editor_absoluteY="-1dp" />

            <TextView

                android:id="@+id/totalamtedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                tools:layout_editor_absoluteY="-1dp" />

            <TextView
                android:id="@+id/youramt"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/admlogtext4"
                android:textColor="@color/black"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totalamt" />


            <!--  Remaining amount of bachat gat          -->

            <TextView

                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="11dp"
                android:paddingTop="5dp"
                android:text="₹"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/youramt"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/investamtedit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/totalamtedit" />

            <TextView

                android:id="@+id/remamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"

                android:layout_marginTop="16dp"
                android:text="@string/admlogtext5"
                android:textColor="@color/black"
                android:textStyle="normal"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/youramt" />


            <!--  Current Distributed          -->

            <TextView
                android:id="@+id/textView3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="68dp"
                android:layout_marginBottom="44dp"
                android:text="₹"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/investamtedit"
                app:layout_constraintHorizontal_bias="0.879"
                app:layout_constraintStart_toStartOf="@+id/remamt"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/remamtval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/investamtedit" />

            <TextView
                android:id="@+id/loanamtgiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:paddingBottom="5dp"
                android:text="@string/admlogtext6"
                android:textColor="@color/black"

                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/remamt" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="24dp"
                android:layout_height="31dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="25dp"
                android:text="₹"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/loanamtgiv"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/cloandisamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/remamtval" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btnadduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/btnbg"
        android:drawableTop="@drawable/woman"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:elevation="8dp"
        android:text="@string/admlogtext7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/recordbtn"
        android:layout_width="150dp"
        android:layout_height="153dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/btnbg"
        android:textStyle="bold"
        android:drawableTop="@drawable/coincollecting"
        android:textColor="@color/black"
        android:elevation="8dp"
        android:text="@string/admlogtext8"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/loanbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="524dp"
        android:background="@drawable/btnbg"
        android:drawableTop="@drawable/loan"
        android:elevation="8dp"
        android:text="@string/admlogtext9"
        android:textColor="@color/black"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lngselecttxtprofset"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remUser"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="144dp"
        android:text="@string/crgrptext4"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.943" />

    <Button
        android:id="@+id/engbtnprofset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remUser"
        android:layout_alignParentStart="true"

        android:backgroundTint="@color/white"
        android:text="English"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/marbtnprofset"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnadduser"
        app:layout_constraintVertical_bias="0.951" />

    <Button
        android:id="@+id/marbtnprofset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remUser"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/lngselecttxtprofset"
        android:backgroundTint="@color/white"
        android:text="मराठी"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lngselecttxtprofset"
        app:layout_constraintTop_toBottomOf="@+id/recordbtn"
        app:layout_constraintVertical_bias="0.952" />

</androidx.constraintlayout.widget.ConstraintLayout>